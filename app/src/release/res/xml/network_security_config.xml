<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Production/Release configuration -->
    <!-- SECURE: Only trusts system certificates, not user-installed certificates -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Only trust system certificates (default behavior) -->
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
